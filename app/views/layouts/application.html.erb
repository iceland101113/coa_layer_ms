<!DOCTYPE html>
<html>
  <head>
    <title>農委會圖層管理系統</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'coa.png' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag('coa.png'), root_path, class: "navbar-brand" %>
          <%= link_to "<strong>農委會圖層管理系統</strong>".html_safe, root_path, class: "navbar-brand" %>
        </div>



        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="pull-right text-right nav navbar-nav">
            <% if current_user %>
              <li><%= link_to('<strong>圖層總覽</strong>'.html_safe, root_path) %></li>
              <li><%= link_to('<strong>分類總覽</strong>'.html_safe, categories_path) %></li>
              <li><%= link_to('<strong>登出</strong>'.html_safe, destroy_user_session_path, method: :delete) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
