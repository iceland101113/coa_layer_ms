<div class="container">

  <h1>農委會圖層管理系統</h1>
  <div>
    <%= link_to '圖層總覽', layers_path %> | <%= link_to '分類總覽', categories_path %>
  </div>



  <div class="row">

    <div class="col-md-12">

      <div class="form-inline" >
        <%= form_for @category do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "分類名稱",  class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-primary" %>
          <% if @category.errors.any? %>
            <%= @category.errors.full_messages.to_sentence %>
          <% end %>
        <% end %>
      </div>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>分類名稱</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td><%= link_to 'Edit', categories_path(id: category.id) %> | <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @categories %>
      </div>

    </div>

  </div>
</div>